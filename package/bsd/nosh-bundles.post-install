	swift@object-updater \
	timedated \
	tinydns \
	volmand \
	wicd \
	winbindd \
	wpa_supplicant \
	ypbind \
	;
do
	i="`escape "$I"`"
	addloguser "$i"-log
	addlog "$i" "$I"
	system-control preset $I.service
	system-control preset --prefix cyclog@ $I.service
done
