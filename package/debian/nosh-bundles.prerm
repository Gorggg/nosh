#!/bin/sh -
case "$1" in
	upgrade)
		# This service has been discontinued.
		if system-control is-enabled stty-sane@console 2>/dev/null
		then
			system-control disable stty-sane@console
		fi
		;;
	remove|purge)
# Don't delete the cyclog@ users because the log files still exist.
		# common services with dedicated log services
		for I in \
			anacron \
			atd \
			avahi-dnsconfd \
			bcron-start \
			bcron-update \
			bootparams \
			ccpd \
			cleanuucp \
			cleantmp \
			cleanX \
			console-kit-daemon \
			ddclient \
			deluged \
			deluge-web \
			dnscache \
			dovecot \
			epmd \
			exim4-queue \
			fail2ban \
			fancontrol \
			fcron \
			ferm \
			flow-capture \
			fscd \
			gdm \
			gitlab-sidekiq \
			gitlab-unicorn \
			gnucron \
			hostnamed \
			kdm@tty7 \
			kdm@ttyv6 \
			keepalived \
			kmod@vboxdrv \
			kmod@vboxnetadp \
			kmod@vboxnetflt \
			kmod@vboxpci \
			libvirtd \
			lm-sensors \
			localed \
			lxdm \
			mailcatcher \
			ModemManager \
			mongodb \
			motd-dynamic \
			moused \
			mysql \
			nagios \
			NetworkManager \
			nfsd \
			nginx \
			nisdomain \
			nmbd \
			ntpd \
			ntpdate \
			openvpn@client \
			openvpn@server \
			org.cups.cups-cancel \
			org.cups.cupsd \
			ossec@agentd \
			ossec@agentlessd \
			ossec@analysisd \
			ossec@csyslogd \
			ossec@dbd \
			ossec@execd \
			ossec@logcollector \
			ossec@maild \
			ossec@monitord \
			ossec@remoted \
			ossec@syscheckd \
			packagekit \
			pdnsd \
			plexmediaserver \
			polipo \
			polkitd \
			postgresql \
			powerd \
			pppd-dns \
			pulseaudio \
			qmail-send \
			rabbitmq-server \
			rpcbind \
			samba \
			sickbeard \
			slim \
			smartd \
			smbd \
			sshdgenkeys \
			swift@account \
			swift@account-auditor \
			swift@account-replicator \
			swift@account-updater \
			swift@container \
			swift@container-auditor \
			swift@container-replicator \
			swift@container-updater \
			swift@object \
			swift@object-auditor \
			swift@object-replicator \
			swift@object-updater \
			sysctl \
			timedated \
			tinydns \
			vnstat \
			volmand \
			wettsteinsyslogd \
			wicd \
			winbindd \
			wpa_supplicant \
			ypbind \
			;
		do
			system-control disable $I.service cyclog@$I.service
			if system-control is-loaded $I.service
			then
				system-control unload-when-stopped $I.service
				system-control stop $I.service
			fi
			if system-control is-loaded cyclog@$I.service
			then
				system-control unload-when-stopped cyclog@$I.service
				system-control stop cyclog@$I.service
			fi
		done
		# common sockets
		for i in \
			avahi-daemon \
			bcron-spool \
			dbus \
			exim4-smtp-relay \
			exim4-smtp-submission \
			fcgiwrap \
			ftp4d \
			ftp6d \
			http6d \
			initctld \
			kadmind \
			klogd \
			kpasswdd \
			nagios-nrpe-server \
			org.cups.cups-lpd \
			qmail-smtp-relay \
			qmail-smtp-submission \
			rsync \
			saned \
			sshd \
			svnserve \
			local-syslog-read \
			local-rsyslogd \
			local-syslogd \
			systemd-syslog-read \
			systemd-rsyslogd \
			systemd-syslogd \
			udp-syslog-read \
			udp-rsyslogd \
			udp-syslogd \
			uuidd \
			vsftpd \
			;
		do
			system-control disable $i.service cyclog@$i.service
			if system-control is-loaded $i.service
			then
				system-control unload-when-stopped $i.service
				system-control stop $i.service
			fi
			if system-control is-loaded cyclog@$i.service
			then
				system-control unload-when-stopped cyclog@$i.service
				system-control stop cyclog@$i.service
			fi
		done
		# common services that fan in to a single logger
		for i in \
			dmesg \
			hostname \
			machine-id \
			natd-log \
			sppp-log \
			sysinit-log \
			emergency-login@console \
			;
		do
			system-control unload-when-stopped $i.service
			system-control stop $i.service
		done
		# Linux services with dedicated log services
		for I in \
			colord \
			colord-sane \
			irqbalance \
			kerneloops \
			kmod@autofs \
			kmod@ipv6 \
			kmod@unix \
			kmod@uvesafb \
			linux-utmp \
			mdadm \
			static-networking \
			udisks \
			upower \
			update-binfmts \
			wettsteinsyslogd \
			;
		do
			system-control disable $I.service cyclog@$I.service
			if system-control is-loaded $I.service
			then
				system-control unload-when-stopped $I.service
				system-control stop $I.service
			fi
			if system-control is-loaded cyclog@$I.service
			then
				system-control unload-when-stopped cyclog@$I.service
				system-control stop cyclog@$I.service
			fi
		done
		# Linux sockets
		for i in \
			acpid \
			systemd-syslog-read \
			systemd-rsyslogd \
			systemd-syslogd \
			;
		do
			system-control disable $i.service cyclog@$i.service
			if system-control is-loaded $i.service
			then
				system-control unload-when-stopped $i.service
				system-control stop $i.service
			fi
			if system-control is-loaded cyclog@$i.service
			then
				system-control unload-when-stopped cyclog@$i.service
				system-control stop cyclog@$i.service
			fi
		done
		# Linux services that fan in to a single logger
		for I in \
			busybox-mdev \
			linux-lockfiles \
			suckless-mdev \
			udev \
			vdev \
			;
		do
			system-control disable $I.service
			if system-control is-loaded $I.service
			then
				system-control unload-when-stopped $I.service
				system-control stop $I.service
			fi
		done
		for I in \
			udev-log \
			udev-trigger-add@subsystems \
			udev-trigger-add@devices \
			busybox-mdev-log \
			busybox-mdev-rescan \
			suckless-mdev-log \
			suckless-mdev-rescan \
			vdev-log \
			;
		do
			system-control disable $I.service
			if system-control is-loaded $I.service
			then
				system-control unload-when-stopped $I.service
				system-control stop $I.service
			fi
		done
		# targets
		for i in \
			sysinit \
			basic \
			dumpauto \
			frame-buffer \
			local-fs \
			local-fs-pre \
			local-syslog \
			remote-fs \
			server \
			swapauto \
			swaplate \
			workstation \
			multi-user \
			;
		do
			system-control disable $i.target
			if system-control is-loaded $i.target
			then
				system-control unload-when-stopped $i.target
				system-control stop $i.target
			fi
		done
		;;
esac
