#!/bin/sh
case "$1" in
	remove|purge)
		for i in \
			exim4r \
			exim4s \
			ftp4d \
			ftp6d \
			http6d \
			kadmind \
			kpasswdd \
			qmail-smtpd \
			rsync \
			saned \
			sshd \
			svnserve \
			systemd-rsyslog \
			vsftpd \
			;
		do
			system-control disable $i cyclog@$i
			system-control stop $i cyclog@$i
		done
		;;
esac

