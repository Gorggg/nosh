#!/bin/sh -
case "$1" in
	remove|purge)
		for i in \
			suckless-mdev \
			suckless-mdev-log \
			suckless-mdev-rescan \
			;
		do
			system-control disable $i.service cyclog@$i.service
			if system-control is-loaded $i.service
			then
				system-control unload-when-stopped $i.service
				system-control stop $i.service
			fi
		done
		;;
esac
