[Unit]
Description=Per-user "Desktop" bus socket
After=user-runtime@%I
Wants=user-runtime@%I

[Socket]
SocketUser=%I
SocketMode=0700
Backlog=2
MaxConnections=2
ListenStream=/run/user/%I/dbus/user_bus_socket
Accept=false

[Install]
WantedBy=sockets.target
