[Unit]
Description=kmod loader for ipv6

[Service]
Type=oneshot
systemdWorkingDirectory=false
ExecStart=[ -d /sys/module/ipv6/ ] || kmod modprobe ipv6
Restart=always

[Install]
WantedBy=workstation.target
