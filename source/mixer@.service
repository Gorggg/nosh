[Unit]
Description=%P service for mixer device %I

[Service]
Type=oneshot
systemdWorkingDirectory=false
ExecStartPre=%P -f /dev/%I `cat /var/db/%I-state`
ExecStopPost=fdredir --write 1 /var/db/%I-state %P -f /dev/%I -s 
Restart=always

[Install]
WantedBy=workstation.target
