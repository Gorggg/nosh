[Unit]
Description=Bernstein's qmail SMTP Relay socket

[Socket]
Backlog=2
BindIPv6Only=both
ListenStream=smtp
Accept=true
MaxConnections=16
UCSPIRules=true
Nagle=false

[Install]
WantedBy=server.target
