[Unit]
Description=NetworkManager daemon
After=local-syslog.target

[Service]
Type=dbus
ExecStartPre=mkdir -m 0755 /run/network
ExecStart=%p --no-daemon
Restart=always

[Install]
WantedBy=workstation.target
