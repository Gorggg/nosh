[Unit]
Description=Background filesystem check (deprecated in favour of fsck@device service bundles)
DefaultDependencies=false

[Service]
EnvironmentDirectory=env
ExecStartPre=sleep ${delay:-0}
ExecStart=fsck -B -p
RemainAfterExit=yes

[Install]
WantedBy=sysinit.target
