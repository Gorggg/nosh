[Unit]
Description=listening git service

[Service]
EnvironmentDirectory=env
User=git-daemon
ExecStart=/usr/local/libexec/git-core/%p --systemd --reuseaddr --base-path "${directory:-/usr/local/git}"
Restart=always

[Install]
WantedBy=server.target
