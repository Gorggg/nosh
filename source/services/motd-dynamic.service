[Unit]
Description=Create the "dynamic" part of the Message Of The Day

[Service]
Type=oneshot
Umask=0033
ExecStart=fdredir --write 1 /run/motd.dynamic uname -srm
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
