[Unit]
Description=Delete the just-used nextboot information from /boot
DefaultDependencies=false
Wants=local-fs.target
After=local-fs.target

[Service]
Type=oneshot
ExecStart=nextboot -D
Restart=never

[Install]
WantedBy=sysinit.target
