[Unit]
Description="policy kit" daemon
After=local-syslog.target extra-shared-libraries.target

[Service]
Type=dbus
RuntimeDirectory=PolicyKit
RuntimeDirectoryMode=0770
ExecStart=/usr/local/libexec/polkitd
Restart=always

[Install]
WantedBy=workstation.target
