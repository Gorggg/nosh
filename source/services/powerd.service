[Unit]
Description=powerd regular service
Before=multi-user.target

[Service]
EnvironmentDirectory=env
ExecStart=%p -v ${flags}
ExecStopPost=sh -c 'sysctl dev.cpu.0.freq=`sysctl -n dev.cpu.0.freq_levels | sed -e \'s:/.*::\'`'

[Install]
WantedBy=workstation.target
