[Unit]
Description=Combined logger for ppp@ services

[Service]
PermissionsStartOnly=true
User=ppp-log
WorkingDirectory=/var/log/sv
ExecStart=cyclog ppp/
Restart=always
RestartSec=1

[Install]
WantedBy=workstation.target
