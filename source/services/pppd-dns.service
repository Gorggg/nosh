[Unit]
Description=Restore /etc/resolv.conf if the system crashed before the PPP daemon was shut down.

[Service]
Type=oneshot
ExecStart=-/etc/ppp/ip-down.d/0000userpeerdns
Restart=never

[Install]
WantedBy=workstation.target
