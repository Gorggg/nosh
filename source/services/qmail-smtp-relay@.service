[Unit]
Description=Bernstein's qmail SMTP Relay daemon

[Service]
systemdWorkingDirectory=false
systemdUserEnvironment=no
EnvironmentDirectory=env
LimitMEMORY=70000000
User=qmaild
ExecStart=qmail-smtpd
Restart=always

[Install]
WantedBy=server.target
