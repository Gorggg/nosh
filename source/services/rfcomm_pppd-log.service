[Unit]
Description=Combined logger for rfcomm_pppd@ services

[Service]
PermissionsStartOnly=true
User=rfcomm_pppd-log
WorkingDirectory=/var/log/sv
ExecStart=cyclog rfcomm_pppd/
Restart=always
RestartSec=1

[Install]
WantedBy=workstation.target

