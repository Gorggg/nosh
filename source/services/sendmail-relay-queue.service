[Unit]
Description=Sendmail Relay queue runner daemon

[Service]
EnvironmentDirectory=env
LimitMEMORY=70000000
ExecStart=sendmail -L %p -Am -q30m ${flags}
ExecStartPre=sendmail -L %p -Am -bC

[Install]
WantedBy=server.target
