[Unit]
Description=System update target
EarlySupervise=true
Wants=sysinit.target
Before=shutdown.target

[Service]
PermissionsStartOnly=true
SessionLeader=true
TTYPath=console
StandardInput=tty
ExecStart=system-update
Restart=always

[Install]
StoppedBy=shutdown.target
